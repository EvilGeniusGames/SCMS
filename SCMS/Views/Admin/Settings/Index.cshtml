@model SCMS.Data.SiteSettings

@{
    ViewData["Title"] = "Site Settings";
    var themes = ViewData["Themes"] as IEnumerable<dynamic>; 
}

<div class="container mt-5">
    <h2 class="mb-4">Edit Site Settings</h2>
    <form asp-action="Save" method="post">
        <div class="mb-3">
            <label asp-for="SiteName" class="form-label"></label>
            <input asp-for="SiteName" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Tagline" class="form-label"></label>
            <input asp-for="Tagline" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="ThemeId" class="form-label">Theme</label>
            <select asp-for="ThemeId" class="form-select">
                @foreach (var theme in themes)
                {
                    <option value="@theme.Id" selected="@(theme.IsSelected ? "selected" : null)">
                        @theme.DisplayName
                    </option>
                }
            </select>
        </div>
        <div class="mb-3">
            <label asp-for="ContactEmail" class="form-label"></label>
            <input asp-for="ContactEmail" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="ContactPhone" class="form-label"></label>
            <input asp-for="ContactPhone" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="ContactAddress" class="form-label"></label>
            <input asp-for="ContactAddress" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Copyright" class="form-label"></label>
            <input asp-for="Copyright" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">Save Changes</button>
    </form>
</div>
